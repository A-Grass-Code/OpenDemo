{
  // 此文件说明：全局通用的配置文件
  // 注意：此配置文件支持热更改；切勿随意改动 ！【RedisConnString，Redis 连接字符串配置 除外】

  // ==============================================================================================

  // 日志属性配置

  // 日志记录保存的天数；默认 5 天；允许的设置范围是： 1 ~ 15
  "LogSaveDays": 7,
  // 判断单个日志文件溢出时的大小，单位：MB，默认 5.0； 允许的设置范围是： 1 ~ 20
  "LogFileSize": 5.0,

  // 日志保存的根目录；默认是在程序根目录下
  // 注意：目录要使用 “ \\ ” ， 例如 C:\\Logs
  "LogSaveRootDirectory": "",

  // ==============================================================================================

  // 是否启用 Redis
  "IsEnableRedis": false,

  // Redis 连接字符串配置 //
  "RedisConnString": "",

  // ==============================================================================================

  // 是否启用数据库连接；若为 false 则不再执行与数据库的操作，适用于不依赖数据库的项目
  "IsEnableDbConn": true

  // ==============================================================================================
}
